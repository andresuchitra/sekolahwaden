<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_item_person"/>
    <!-- it is suggested for paddingLEft to use PaddingStart as well -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="4dp"
        android:paddingStart="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="4dp"
        android:paddingTop="17dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_item_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Nama"/>
        <TextView
            android:id="@+id/tv_item_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="Gender"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="17dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_item_jenjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Jenjang"
            android:layout_gravity="end"/>
        <TextView
            android:id="@+id/tv_item_no_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:text="No. HP"
            android:layout_gravity="end"/>
    </LinearLayout>

</LinearLayout>